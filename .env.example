# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=cancer-mlops
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=True

# MLflow Settings
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=cancer_prediction
MLFLOW_ARTIFACT_LOCATION=./experiments/mlruns

# Model Registry
MODEL_REGISTRY_PATH=./models
DEFAULT_MODEL=hybrid_ensemble
MODEL_VERSION=latest

# Data Settings
DATA_PATH=./data
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed

# Training Configuration
RANDOM_STATE=42
TEST_SIZE=0.25
VALIDATION_SIZE=0.15

# Model Hyperparameters
LR_CLASS_WEIGHT=balanced
GBC_N_ESTIMATORS=100
GBC_LEARNING_RATE=0.1
NN_HIDDEN_LAYERS=30,30,30
NN_ACTIVATION=logistic
ENSEMBLE_WEIGHTS=0.7,1.2,0.5

# Monitoring
ENABLE_MONITORING=True
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Database (if needed for logging/tracking)
# DATABASE_URL=postgresql://user:password@localhost:5432/cancer_mlops

# Cloud Storage (if using cloud)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=cancer-mlops-bucket

# Notification Settings (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# EMAIL_ALERTS=your.email@example.com
